{%- capture htmlContent -%}
<!doctype html>
<html class="no-js" lang="{{ shop.locale }}">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="theme-color" content="{{ settings.color_button }}">
    <meta name="format-detection" content="telephone=no">
